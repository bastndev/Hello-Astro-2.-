---
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <h1 class="font-bold text-orange-500 text-3xl">{frontmatter.title}</h1>
    <h2>{frontmatter.data}</h2>
    <div class="container">
      <slot />
    </div>
    <style>
      .container {
        padding: 50px;
        width: 70%;
        text-align: justify;
      }
    </style>
  </body>
</html>
