---
const CardDiv = "div";
const Container = "div";
---

<!-- dynamic labels --><!-- We can rename card -->
<CardDiv class="card bg-gray-900 text-white">
  <img src="public/images/avatar1.png" alt="" />
  <Container class="container">
    <h4>Gohit</h4>
    <p>Software Ingenire</p>
  </Container>
</CardDiv>

<style>
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    margin-left: 50px;
    width: 15%;
    margin-bottom: 15px;
    transition: 0.3s;
    padding: 10px;
    border-radius: 10px;
    height: 250px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  img {
    width: 50%;
    padding-bottom: 50px;
  }

  .card:hover {
    box-shadow: 0 8px 16px 0 rgba(255, 255, 255, 0.2);
    cursor: pointer;
  }

  .container {
    padding: 2px 16px;
  }
</style>
