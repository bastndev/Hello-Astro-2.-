---
const CardProfile = "div";

export interface Props {
  hello: string;
  welcome: string;
}
const { hello, welcome } = Astro.props;
---

<CardProfile class="card">
  <img src="public/images/catb.jpg" class="rounded-full" alt="" />
  <div class="box">
    <h1>{hello}</h1>
    <p class="text-white">{welcome}</p>
    <slot>
      <p class="text-gray-500">Defaul Text</p>
    </slot>
  </div>
</CardProfile>

<style>
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    margin-left: 50px;
    width: 15%;
    margin-bottom: 15px;
    transition: 0.3s;
    padding: 10px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  img {
    width: 50%;
    margin-bottom: 50px;
  }

  .card:hover {
    box-shadow: 0 8px 16px 0 rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transform: scale(1.05);
  }

  .container {
    padding: 2px 16px;
  }
</style>
